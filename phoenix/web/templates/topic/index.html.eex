<h3>All Topics</h3>

<ul class="collection">
	<%= for topic <- @topics do %>
		<li class="collection-item">
			<a href="/topics/<%= topic.id %>"><%= topic.title %></a>

			<%= if @conn.assigns.user.id == topic.user_id do %>
			<%= link "Delete", method: :delete, class: "right", to: topic_path(@conn, :delete, topic) %>
			<a class="right" href="/topics/<%= topic.id %>/edit">Edit</a>
			<% end %>
		</li>
	<% end %>
</ul>